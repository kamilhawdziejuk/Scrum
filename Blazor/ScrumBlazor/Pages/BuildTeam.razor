@page "/buildteam"

@using System.Threading
@using ScrumBlazor.Data
@inject TeamsService TeamService

<h4>Build team:</h4>
<br />

<input placeholder="Check Team availability" @bind="newTeam" />
<button class="btn btn-primary" @onclick="(() => CheckTeam())">Check Name</button>
<label>@checkResult</label>
<br/>
<button disabled=@disabledTeamCreation class="btn btn-success" @onclick="(() => CreateTeam())">Create Team</button>

@if (team == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in team.Members)
            {
                <tr>
                    <td>@member.Name</td>
                    <td><button class="btn btn-danger" @onclick="(() => Remove(member.Id))">Remove</button></td>
                </tr>
            }
        </tbody>

    </table>

    <label>Add new team member:</label>
    <input placeholder="Member" @bind="newMember" />
    <button class="btn btn-success" @onclick="(() => Add())">Add member</button>
}

@code {

    Team team;
    string newMember;
    bool disabledTeamCreation = true;
    private string newTeam;
    private string checkResult;

    protected override async Task OnInitializedAsync()
    {
    }

    private void Remove(int id)
    {
        team = TeamService.RemoveMember(team, id);
        StateHasChanged();
    }

    private void CreateTeam()
    {
        team = TeamService.CreateTeam(newTeam);
        StateHasChanged();
    }

    private void Add()
    {
        team = TeamService.AddMember(team, newMember);
        StateHasChanged();
    }

    private void CheckTeam()
    {
        if (!string.IsNullOrWhiteSpace(newTeam))
        {
            if (TeamService.CheckTeamAvailability(newTeam))
            {
                checkResult = "Team does not exist";
                team = null;
                disabledTeamCreation = false;
            }
            else
            {
                team = TeamService.GetTeam(newTeam);
                checkResult = "Team exists";
                disabledTeamCreation = true;
            }
            StateHasChanged();
        }
    }
}
